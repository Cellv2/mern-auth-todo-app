{
    "compilerOptions": {
        /* Basic Options */
        "target": "es6",
        "module": "es2020",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "dist",
        // "noEmit": true,
        "isolatedModules": true,

        /* Strict Type-Checking Options */
        "strict": true,

        /* Additional Checks */
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        /* Advanced Options */
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,

    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "**/*.test.ts"
    ]
}
